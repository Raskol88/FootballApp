<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Exists for inheritance purposes -->
    <style name="Onsport" parent="Onsport.Base" />

    <style name="Onsport.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/onsport_primary</item>
        <item name="colorPrimaryDark">@color/onsport_primary_dark</item>
        <item name="colorAccent">@color/onsport_accent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@color/text_light</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/onsport_primary_dark
        </item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:radioButtonStyle">@style/Onsport.CompoundButton.Radio</item>
        <item name="android:buttonStyle">@style/Onsport.CompoundButton</item>
        <item name="android:windowBackground">@color/onsport_primary</item>
        <item name="android:colorBackground">@color/onsport_primary</item>

    </style>


    <style name="Onsport.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Onsport.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Onsport.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Onsport.CategorySelectionActivity" />
    <style name="Onsport.QuizActivity" />
    <style name="Onsport.SignInActivity" />

    <style name="Onsport.Blue">
        <item name="colorPrimary">@color/theme_blue_primary</item>
        <item name="colorPrimaryDark">@color/theme_blue_primary</item>
        <item name="android:textColorPrimary">@color/theme_blue_text</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/theme_blue_primary_dark
        </item>
        <item name="android:windowBackground">@color/theme_blue_background</item>
        <item name="colorAccent">@color/theme_blue_accent</item>
    </style>

    <style name="Onsport.Green">
        <item name="colorPrimary">@color/theme_green_primary</item>
        <item name="colorPrimaryDark">@color/theme_green_primary</item>
        <item name="android:textColorPrimary">@color/theme_green_text</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/theme_green_primary_dark
        </item>
        <item name="android:windowBackground">@color/theme_green_background</item>
        <item name="colorAccent">@color/theme_green_accent</item>
    </style>

    <style name="Onsport.Purple">
        <item name="colorPrimary">@color/theme_purple_primary</item>
        <item name="colorPrimaryDark">@color/theme_purple_primary</item>
        <item name="android:textColorPrimary">@color/theme_purple_text</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/theme_purple_primary_dark
        </item>
        <item name="android:windowBackground">@color/theme_purple_background</item>
        <item name="colorAccent">@color/theme_purple_accent</item>
    </style>

    <style name="Onsport.Red">
        <item name="colorPrimary">@color/theme_red_primary</item>
        <item name="colorPrimaryDark">@color/theme_red_primary</item>
        <item name="android:textColorPrimary">@color/theme_red_text</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/theme_red_primary_dark
        </item>
        <item name="android:windowBackground">@color/theme_red_background</item>
        <item name="colorAccent">@color/theme_red_accent</item>
    </style>

    <style name="Onsport.Yellow">
        <item name="colorPrimary">@color/theme_yellow_primary</item>
        <item name="colorPrimaryDark">@color/theme_yellow_primary</item>
        <item name="android:textColorPrimary">@color/theme_yellow_text</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/theme_yellow_primary_dark
        </item>
        <item name="android:windowBackground">@color/theme_yellow_background</item>
        <item name="colorAccent">@color/theme_yellow_accent</item>
    </style>

    <style name="Onsport.CompoundButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:button">@null</item>
    </style>

    <style name="Onsport.CompoundButton.Radio" parent="Onsport.CompoundButton">
        <item name="android:background">@drawable/selector_checkable</item>
    </style>

    <style name="Onsport.CompoundButton.True" parent="Onsport.CompoundButton">
        <item name="android:background">@drawable/selector_true</item>
    </style>

    <style name="Onsport.CompoundButton.False" parent="Onsport.CompoundButton">
        <item name="android:background">@drawable/selector_false</item>
    </style>

    <style name="Onsport.TextAppearance" />

    <style name="Onsport.TextAppearance.CategoryItem" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/category_item_text_size</item>
    </style>

    <style name="Onsport.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/onsport_primary</item>
    </style>

    <style name="Onsport.TextAppearance.Title.Inverse" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Onsport.TextAppearance.Title.Picker" parent="Onsport.TextAppearance.Title">
        <item name="android:textSize">96sp</item>
    </style>

    <style name="Onsport.TextAppearance.Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/onsport_primary</item>
    </style>

    <style name="Onsport.TextAppearance.ListItem" parent="TextAppearance.AppCompat.Subhead" />
    <style name="Onsport.TextAppearance.ListItemSecondary" parent="TextAppearance.AppCompat.Body1" />

</resources>
